<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/shadow_background"
    android:backgroundTint="@color/white"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:padding="12dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/one_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/task_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="task title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/task_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_title_text_view"
                android:layout_marginVertical="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="this can be task description that can be long"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/task_timestamp_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_description_text_view"
                android:layout_marginVertical="4dp"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="2"
                android:text="timestamp"
                android:textSize="12sp" />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/done_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</LinearLayout>